body
  font-size 100%

font-family-menu = 'Geo';
font-family-main = 'Fredoka One';

font-size-menu = 5vw
font-size-main = 2em

font-menu = font-size-menu font-family-menu
font-main = font-size-main font-family-main

a, a:link, a:visited
  color inherit
  text-decoration: none

body
  font-family: font-family-main
  font-size: font-size-main
  color COLOR_BLACK_DARK

header, .nav
  font font-menu
  font-size font-size-menu
  color COLOR_BLACK_DARK
  +above(2)
    font-size 3vw
  a:hover
    color COLOR_GREY

h1, h2, h3, h4, h5
  margin 0

h1, h2, h3, h4, h5
  font-family font-family-main
  letter-spacing: 5px
  color COLOR_DARK_BLACK
  font-weight light
  &.headline-style-1
    color COLOR_WHITE
    text-shadow 3px 3px 0px rgba(black, 1);

h1
  font-size 1.3vw
  +above(3)
    line-height: 30px
h2
  font-size 1.7vw

+above(2)
  h1
    font-size 1.7vw
  h2
    font-size 1.9vw
+below(1)
  h1
    font-size 3.5vw
  h2
    font-size 4.5vw

header nav.nav
  h1, h2
    vertical-align: middle
  +above(3)
    ul
      width 30%
    h2
      width 40%
  +above(4)
    ul
      font-size 1.6vw



.scene-element
  .text
    font-size 1.2em
    color COLOR_BLACK_DARK
    @media screen and (min-width: 800px)
      font-size 2em
  &.scene_element--title .text
    color orange
    text-shadow 3px 3px 0px rgba(#333, 1);
  &:hover .text
    color #aaa
    text-shadow: none

#credits
  .nav
    font-size 0.7em
