#scene-elements
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity 1
  transition all 400ms
  max-height 800px
  max-width 800px

  .scene-element
    transform-origin top left
    position fixed
    background-repeat no-repeat
    background-size cover
    cursor pointer
    transition all 500ms
    opacity 1
    &.image
      border 1px solid black
    .overlay-gif
      width 100%
      height 100%
      display block
      position: relative
      z-index 1
      opacity 0
      transition opacity 200ms
    &:hover
      .overlay-gif
        opacity 1
    &.fadeOut
      opacity 0



/** Body active & dev classes
*/
body.video-player-active
  #scene-elements
    opacity 0

#placement-dev-wrapper
  position: relative
  z-index: -1
  opacity 0
  .placement-dev-wrapper
    position: fixed

body.placement-dev-wrapper-active.grid-active
  #placement-dev-wrapper
    opacity 0.5

.target-zone-label
  display none
body.dev
  .target-zone-label
    display none
    font 14px Arial
    font-weight: bold
    color red
  &.grid-active.placement-dev-wrapper-active
    .target-zone-label
      display block
