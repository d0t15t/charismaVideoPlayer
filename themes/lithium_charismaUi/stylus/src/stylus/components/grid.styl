.grid-segment
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity 0
  transition opacity 100ms;
  &.grid-segment__border-active
    opacity 1
    &.orange
      border: 1px solid orange;
