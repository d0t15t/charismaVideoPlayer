#grid-wrapper
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1
  opacity 0
  transition opacity 300ms;
  &.grid-wrapper__active
    opacity 1
.grid-segment,
.grid-side
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border 1px solid white

.segment-bg
  display: none
  > span
    margin -5px 0 0 30px;

body.dev
  .segment-bg
    display: unset
  #grid-wrapper.bg-active
    [zone="1"]
      background-color rgba(78, 0, 0, 0.1);
    [zone="2"]
      background-color rgba(78, 0, 50, 0.2);
    [zone="3"]
      background-color rgba(100, 0, 80, 1);

