gridSide = 20px
nav.nav
  display inline
  ul
    display inline-block
    vertical-align: top
    margin: 0
    position: relative
    z-index: 1
    li
      display inline
      list-style: none

nav.nav
  ul#ctrl-links
    width gridSide
    height gridSide
    margin gridSide (gridSide /2) gridSide gridSide
    > li
        // width gridSide
        float left;
        clear both
        height gridSide
        display block
        margin-bottom gridSide
      form
        display inline
        position relative
        float left
        > input, label
          top 0
          left 0
          position: absolute
          display block
          width gridSide
          height gridSide
          box-sizing: border-box
        label
          border 1px solid COLOR_WHITE;
        input[type=checkbox]
          z-index 1
          opacity 0
          cursor pointer
          &:hover+label
            background-color COLOR_GREY
          &:checked+label
            background-color: blue
            border: 1px solid COLOR_DARK_BLACK
        > span
          font-size 1em * 0.5
          display block
          margin-left gridSide * 2
        > span:not(:first-child)
          width: 200px

#main-menu
  #credits-link
    position: fixed
    top gridSide - 10px
    right gridSide


nav.nav
  ul#main-menu
    margin-top 14px

#credits
  #home-link
    background-color white
    width 100%
    position relative
    padding 20px 30px
    z-index: 1