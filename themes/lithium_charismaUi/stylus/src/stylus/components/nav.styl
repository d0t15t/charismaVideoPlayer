gridSide = 10px

header
  transition all 600ms
  position relative
  top -30px
  +above(2)
    top -30px
  +below(1)
    top -40px
  &.active
    top 0

body#credits
  header
    display none

body.video-player-active
  header
    opacity 0

// h = 20px
header.header, footer
  position: relative
  width 100%
  z-index: 999
  background-color rgba(#000, 1)
  transition all 300ms
  nav
    position relative
    *
      display inline
      box-sizing: border-box
    > *
      position relative
      vertical-align: middle
      padding 5px 10px 3px 10px
    h1#site-title
    h2#page-title
    h4
    a
      line-height: 13px
    h1#site-title
      margin 0
      display none
      +above(2)
        display inline
      //   top -1.5px
      // +above(4)
      //   top -2.5px
    h2#page-title
      background black
      position fixed
      width 100%
      left 0
      bottom 0
      float left
      text-align: center
      font-style italic
      +above(4)
        top 1px
        position relative
        background-color: transparent
      +above(6)
        top 6px

    h4
      position relative
      // display none
      +above(4)
        display inline
        // margin-left 20px
        // top -2px
      &:after
        content ':';
    ul
      position: relative
      // height h
      &#main-menu
        float left
        li
          position relative
          top -1px
      &#sub-menu
        position relative
        top -1px
        float right
        text-align: right
        // +above(2)
        //   top -2px
        // +above(4)
        //   top -5px
      +above(3)
        padding 0 10px 0 15px
      li
        vertical-align: middle
        padding 0 4px
        &.active-link
          > a
            text-decoration: underline
            // border-bottom 2px solid white

+above(4)
  header nav
    > *
      width 33% !important

+above(4)
  header.header, footer
    nav.nav
      > *
        // height h + 5px
