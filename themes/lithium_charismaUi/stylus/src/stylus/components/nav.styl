gridSide = 10px

header
  opacity 1
  transition opacity 600ms
body.video-player-active
  header
    opacity 0

h = 30px
header.header
  position: relative
  background-color orange
  width 100%
  z-index: 2
  nav
    // padding 5px 10px
    position relative
    *
      display inline
      box-sizing: border-box
    > *
      padding 5px 10px
      position relative
      height h
      vertical-align: middle
    h2#page-title
      float left
      text-align: center
      +above(2)
        line-height: 32px
    ul
      position: relative
      height h
      &#main-menu
        float left
        li
          position relative
          // top -3px
      &#sub-menu
        position relative
        // top 4px
        float right
        text-align: right
      li
        vertical-align: middle
        padding 0 3px
        &.active-link
          > a
            border-bottom 2px solid black

+above(3)
  header.header
    nav.nav
      > *
        height h + 10px
