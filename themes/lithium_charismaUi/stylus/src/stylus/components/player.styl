
iW = 640px
iH = 480px
margin = 40px
#master-video-player
  position relative
  width: iW + (margin)
  height: iH + (margin)
  top: 50%;
  transform:translateY(-50%);
  background-color rgba(0, 0, 0, 0.9)
  margin auto auto
  opacity 0
  transition opacity 400ms
  z-index: -2
  &.active
    z-index: 1
    opacity 1

#master-video-player iframe
  // border 5px solid black
  // background black

.video-player
  top 0
  left 0
  position: absolute
  padding (margin / 2)

button-width = 30px
.video-controls
  position: absolute
  top 0
  right 0
  background pink
  z-index: 1
  .close
    margin 5px
    z-index: 3;
    position: absolute;
    right: 0;
    background-image: url('/images/icon-close.svg');
    background-size: contain;
    width: button-width;
    height: button-width;
    cursor: pointer;


