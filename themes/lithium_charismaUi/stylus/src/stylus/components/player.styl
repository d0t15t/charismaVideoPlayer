
iW = 375px
iH = 300px
margin = 40px
#master-video-player
  background-color: #0000b3;
  > div
    position fixed
    width: iW
    height: iH
    top: 50%;
    left: 50%;
    transform:translate(-50%, -50%);
    background-color rgba(0, 0, 0, 0.9)
    @media screen and (min-width: 600px)
      width: 500px
      height: 375px
    @media screen and (min-width: 800px)
      width: 640px
      height: 520px
  width 100%
  height 100%
  opacity 0
  transition opacity 400ms
  z-index: -2
  display none
  &.active
    display block
    z-index: 2
    opacity 1

#master-video-player iframe
  width iW - (margin / 2)
  height iH
  position: fixed
  top 50%
  left 50%
  transform: translate(-50%, -50%)
  @media screen and (min-width: 600px)
    width: 580px
    height: 375px
    margin 0 auto
  @media screen and (min-width: 800px)
    width: 640px
    height: 500px

  // border 5px solid black
  // background black

.video-player
  top 50%
  left 50%
  position: fixed
  transform translate(-50%, -50%)
  // padding 0 (margin / 4)
  z-index: 0
  overflow hidden
  width 510px
  height 290px
  width 100%
  @media screen and (min-width: 600px)
    height 350px
  @media screen and (min-width: 800px)
    height 510px
  iframe
    opacity 0
    transition opacity 700
  &.active
    z-index: 2
    iframe
      opacity 1
      z-index 1

:-webkit-full-screen-ancestor iframe
  transform translate(0, 0) !important

button-width = 30px
.video-controls
  position: absolute
  top 10px
  right 10px
  z-index: 3
  opacity 0
  transition all 200ms
  @media screen and (min-width: 800px)
    right 10px
  .close
    margin 5px
    z-index: 3;
    position: absolute;
    right: 0;
    background-image: url('/images/icon-close.svg');
    background-size: contain;
    width: button-width;
    height: button-width;
    cursor: pointer;
    display block
.hover
  .video-controls
    opacity 1

buttonH = 50px

#playlist
  display: none
  position: absolute
  height buttonH
  width 100%
  bottom buttonH * -1
  left 0
  z-index: 1
  opacity: 0
  tranition all 200ms
  > *
    margin 10px 5px
    background-color rgba(green, 0.3)
    width buttonH - 10
    height buttonH - 10
    display inline-block
    background: url(/images/chevron-right.svg) no-repeat center center / contain;
    &:hover
      cursor pointer
    &:first-child
      transform rotate(180deg)
    &:last-child
      float right
  @media screen and (max-height: 600px)
    // background-color pink
    bottom 10px
    > *
      position absolute
      &:first-child
        left buttonH * -1
      &:last-child
        right buttonH * -1

.hover
  #playlist
    opacity 1
