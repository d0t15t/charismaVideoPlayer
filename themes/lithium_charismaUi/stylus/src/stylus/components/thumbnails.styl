#scene-elements
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  transition all 400ms
  z-index: 1
  // +below(1)
  //   transform rotate(90deg)

  .scene-element
    box-sizing: border-box
    transform-origin top left
    position fixed
    top 0
    left 0
    background-repeat no-repeat
    background-size cover
    background-position: center center
    cursor pointer
    opacity 0

    &.se-visible
      opacity 1
    &.image
      border 1px solid black
    .overlay-gif
      width 100%
      height 100%
      display block
      position: relative
      z-index 1
      opacity 0
      transition opacity 200ms
    &.text.scene_element--name
      text-transform: uppercase
    &:hover
      .overlay-gif
        opacity 1
    &.fadeOut
      opacity 0

