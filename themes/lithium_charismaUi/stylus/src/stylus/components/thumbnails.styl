/** Body active & dev classes
*/
body.video-player-active
  #scene-elements
    opacity 0
    z-index -1

#placement-dev-wrapper
  position: relative
  z-index: -1
  opacity 0
  .placement-dev-wrapper
    position: fixed

body.placement-dev-wrapper-active.grid-active
  #placement-dev-wrapper
    opacity 0.5

.target-zone-label
  display none
body.dev
  .target-zone-label
    display none
    font 14px Arial
    font-weight: bold
    color red
  &.grid-active.placement-dev-wrapper-active
    .target-zone-label
      display block

